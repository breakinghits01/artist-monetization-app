# Docker MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=adminpassword
MONGO_DB_NAME=artist_monetization

# Mongo Express (Web UI)
MONGOEXPRESS_LOGIN=admin
MONGOEXPRESS_PASSWORD=pass

# Backend API Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://admin:adminpassword@localhost:27017/artist_monetization?authSource=admin

# JWT Authentication
JWT_SECRET=dev-secret-key-change-in-production-2026
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production-2026
JWT_REFRESH_EXPIRE=30d

# Stripe Payment (Use test keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Token Economy
TOKEN_VALUE_USD=0.10

# File Upload - Local for development
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=52428800

# Frontend URL
FRONTEND_URL=http://localhost:8080
WEB_FRONTEND_URL=http://localhost:3001

# Platform Discount
WEB_DISCOUNT_PERCENTAGE=0.30
APP_STORE_FEE=0.30

# Artist Constraints
MAX_SONGS_PER_ARTIST=10
