# Docker MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=adminpassword
MONGO_DB_NAME=artist_monetization

# Mongo Express (Web UI)
MONGOEXPRESS_LOGIN=admin
MONGOEXPRESS_PASSWORD=pass

# Backend API Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://admin:adminpassword@localhost:27017/artist_monetization?authSource=admin

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRE=30d

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Token Economy
TOKEN_VALUE_USD=0.10

# File Upload (AWS S3 or compatible)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=artist-monetization-uploads

# Or use local storage for development
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=52428800
# 50MB in bytes

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8080
WEB_FRONTEND_URL=http://localhost:3001

# Email Service (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Platform Discount
WEB_DISCOUNT_PERCENTAGE=0.30
APP_STORE_FEE=0.30

# Artist Constraints
MAX_SONGS_PER_ARTIST=10

# Redis (Optional - for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
